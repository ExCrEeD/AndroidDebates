<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_pick_image"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="330dp"
        android:gravity="center"
        android:text="Imagen"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText_tittle_debate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Titulo debate">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText_description_debate"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/editText_tittle_debate"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Descripcion debate" />

    <Button
        android:id="@+id/button_create_debate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="248dp"
        android:gravity="center"
        android:text="Crear Debate"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>